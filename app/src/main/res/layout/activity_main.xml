<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal">
    <EditText android:id="@+id/edit_message"
        android:layout_width="0dp" android:text="@string/message"
        android:layout_height="wrap_content" android:layout_weight="1"></EditText>

    <Button android:text="@string/send_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="sendMessage"></Button>
</LinearLayout>
